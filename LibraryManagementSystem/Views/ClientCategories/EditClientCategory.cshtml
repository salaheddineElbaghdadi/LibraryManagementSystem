@model LibraryManagementSystem.ViewModels.ClientCategories.EditClientCategoryViewModel

@{
    ViewBag.Title = "EditClientCategory";
}

<h2>EditClientCategory</h2>

@using (Html.BeginForm("EditClientCategory", "ClientCategories", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EditClientCategoryViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.Label("Category Name")
            @Html.TextBoxFor(model => model.clientCategory.ClientCategoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.clientCategory.ClientCategoryName, String.Empty, new { @class = "invalid-message" })
        </div>

        <div class="form-group">
            @Html.Label("Loan Duration (Days)")
            @Html.TextBoxFor(model => model.clientCategory.LoanDuration, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.clientCategory.LoanDuration, String.Empty, new { @class = "invalid-message" })
        </div>

        <div class="form-group">
            @Html.Label("Max loans")
            @Html.TextBoxFor(model => model.clientCategory.MaxLoans, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.clientCategory.MaxLoans, String.Empty, new { @class = "invalid-message" })
        </div>

        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
