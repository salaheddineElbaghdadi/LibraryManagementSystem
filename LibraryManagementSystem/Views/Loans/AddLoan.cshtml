@model LibraryManagementSystem.ViewModels.Loans.AddLoanViewModel

@{
    ViewBag.Title = "AddLoan";
}

<h2>Add Loan</h2>

@using (Html.BeginForm("AddLoan", "Loans", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Client Id")
            @Html.TextBoxFor(model => model.loan.ClientId, new { @readonly = true })
        </div>
        <div class="form-group">
            @Html.Label("Book ISBN")
            @Html.TextBoxFor(model => model.ISBN)
            @if (!Model.bookFound)
            {
                <text>
                    @Html.ValidationMessage("Book ISBN", "Book not found", new { @class = "invalid-message" })
                </text>
            }
        </div>
        <div class="form-group">
            @Html.Label("Start Date")
            @Html.TextBoxFor(model => model.loan.StartDate, new {  @class = "datepicker" })
        </div>
        <div class="form-group">
            @Html.Label("Loan Duration")
            @Html.TextBoxFor(model => model.loan.LoanDuration)
        </div>

        <button type="submit" class="btn btn-success">Add</button>
        <br />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


